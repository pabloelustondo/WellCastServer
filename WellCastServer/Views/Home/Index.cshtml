<h1>Basic Get Operations Inteded to be used by Wellcast Node-Based Api</h1>
<table>
    <tr>
        <td>
            <a href="./api/SymptomCategories">GET: /api/SymptomCategories</a>
        </td>
        <td>
            @{

            String firstSymptomCategory = ViewBag.symptomCategories[0].ID;
        }
        <a href="./api/SymptomCategories/@firstSymptomCategory.ToString()">GET: /api/SymptomCategories/@firstSymptomCategory.ToString()</a>
    </td>
    </tr>
    <tr>
    <td>
           <a href="./api/Symptoms">GET: /api/Symptoms</a>
    </td>
        <td>
            @{

            String firstSymptom = ViewBag.symptoms[0].ID;
        }
        <a href="./api/Symptoms/@firstSymptom.ToString()">GET: /api/Symptoms/@firstSymptom.ToString()</a>
    </td>

    </tr>
    <tr>
        <td>
            <a href="./api/Conditions">GET: /api/Conditions</a>
        </td>
        <td>@{
            
            String firstCondition = ViewBag.conditions[0].ID;
        }
            <a href="./api/Conditions/@firstCondition.ToString()">GET: /api/Conditions/@firstCondition.ToString()</a>
        </td>
    </tr> 

    <tr>
        <td><p>All Forecasts (impractical call when system in production)</p>
            <a href="./api/Forecasts"> GET: /api/Forecasts </a>
        </td>
        <td>
            @{

                String firstUserId="";
                try
                {
                    firstUserId = ViewBag.users[0].ID;
                }
                catch (Exception) { }
            }
            <p>All Forecasts for one userId</p>
            <a href="./api/Forecasts?userid=@firstUserId.ToString()">GET: /api/Forecasts?userid=@firstUserId.ToString()</a>
        </td>
        <td>
            @{

                String firstForecast="";
                try
                {
                    firstForecast = ViewBag.forecasts[0].ID;
                }
                catch (Exception) { }
            }
            <p>One specific forecast using the Guid</p>
            <a href="./api/Forecasts/@firstForecast.ToString()">GET: /api/Forecasts/@firstForecast.ToString()</a>
        </td>

    </tr> 

</table>

